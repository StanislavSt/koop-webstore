{
  "name": "koop-webstore",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier \"src/**/*.{js,jsx,ts,tsx}\" --write",
    "graphql:types": "graphql-codegen --config codegen.yml -r dotenv/config",
    "rustywind-fix": "rustywind --write ."
  },
  "dependencies": {
    "@apollo/client": "^3.6.2",
    "graphql": "^16.4.0",
    "i18next": "^22.0.6",
    "next": "12.1.6",
    "next-i18next": "^13.0.0",
    "probe-image-size": "^7.2.3",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-i18next": "^12.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-operations": "2.4.0",
    "@graphql-codegen/typescript-react-apollo": "3.2.14",
    "@next/eslint-plugin-next": "^12.1.6",
    "@types/node": "17.0.31",
    "@types/probe-image-size": "^7.2.0",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "rustywind": "^0.15.1",
    "tailwindcss": "^3.0.24",
    "typescript": "4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "prepare": "npx husky install",
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn run rustywind-fix",
      "eslint --cache --cache-location .next/cache/eslint/ --fix --max-warnings=0",
      "yarn run format"
    ]
  }
}
